<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI_Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="BMI Calculator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text= "BMI" x:Name="Lbl_BMI" />
        

        <Editor x:Name="Inp_weight" 
    Placeholder="Please enter weight in pounds" 
    PlaceholderColor="Green" />


        <Editor x:Name="Inp_height" 
    Placeholder="Please enter height in inches" 
    PlaceholderColor="Green" />
        
        <Button Text="Calculate" x:Name="Btn_BMI" Clicked="Btn_Clicked" />

    </StackLayout>

</ContentPage>
